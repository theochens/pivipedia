
<div class="col-md-6 col-md-offset-3" id="edit_page">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h1>Edit</h1>
      </div>
      <div class="panel-body">
        <div class="current_image text_center">
          <%= image_tag(@post.image.url, class: "box panel panel-default") %>
        </div>
        <div class = "col-md-8 col-md-offset-2">
          <%= simple_form_for [@subject,@post] do |f| %>
            <br>
            <%= f.input :image, input_html: { class: 'form-control' } %>
            <br>
            <%= f.input :content, input_html: {class: "form-control"} %>
            <hr>
            <%= link_to("Delete", 
                        subject_post_path(@post.subject, @post), 
                        class: "btn btn-default pull-right",
                        method: :delete,
                        data: { confirm: "Are you sure?" } )%> 
            <%= f.submit "Edit", class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
