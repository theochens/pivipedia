<!DOCTYPE html>
<html></html>
<head>
  <title>Pivipedia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"> Pivipedia </a>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <%= form_tag subjects_path, method: :get do %>
            <%= text_field_tag :search, 
                              params[:search], 
                              class: "form-control",
                              placeholder: "Search..." %>
            <%= submit_tag "Search", 
                          class: "btn btn-default ",
                          name: nil %>
          <% end %>
        </div>
      </form>
        <ul class="nav navbar-nav navbar-right">
          <% if !current_user %>
            <li> <%= link_to "Sign up", new_user_registration_path %> </li>
            <li> <%= link_to "Sign in", 
              new_user_session_path %> </li>
          <% else %>
            <li> <%= link_to(current_user.name, account_posts_path )%> </li>
            <li> <%= link_to edit_user_registration_path do %>
              <span class="glyphicon glyphicon-cog"></span>
              <% end %> 
            </li>
          <% end %>
        </ul>
     
    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </div>

  <footer class="container" style="margin-top: 100px;">
    <p class="text-center">
      Copyright Â© 2015 Pivipedia Inc. All rights reserved.
      <br>
      Website by Pivipedia Inc.
    </p>
  </footer>

</body>
